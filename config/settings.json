{
  "version": "1.0.0",
  "project_name": "AI OrderFlow Signal Bot",
  "timezone": "Asia/Tashkent",
  "language": "uz",
  
  "api_limits": {
    "oneinch": {
      "rate_limit": 100,
      "timeout": 30,
      "max_retries": 3,
      "retry_delay": 2,
      "endpoints": {
        "swap": "https://api.1inch.dev/swap/v6.0/1/swap",
        "quote": "https://api.1inch.dev/swap/v6.0/1/quote",
        "tokens": "https://api.1inch.dev/swap/v6.0/1/tokens"
      }
    },
    "thegraph": {
      "rate_limit": 200,
      "timeout": 25,
      "max_retries": 3,
      "retry_delay": 1,
      "endpoints": {
        "uniswap_v3": "https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3",
        "uniswap_v2": "https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v2"
      }
    },
    "alchemy": {
      "rate_limit": 300,
      "timeout": 15,
      "max_retries": 5,
      "retry_delay": 1,
      "endpoints": {
        "ethereum": "https://eth-mainnet.g.alchemy.com/v2/",
        "polygon": "https://polygon-mainnet.g.alchemy.com/v2/",
        "arbitrum": "https://arb-mainnet.g.alchemy.com/v2/",
        "bsc": "https://bnb-mainnet.g.alchemy.com/v2/"
      }
    },
    "ccxt": {
      "rate_limit": 150,
      "timeout": 20,
      "max_retries": 3,
      "retry_delay": 2,
      "exchanges": {
        "gateio": {
          "sandbox": false,
          "rate_limit": 100
        },
        "kucoin": {
          "sandbox": false,
          "rate_limit": 100
        },
        "mexc": {
          "sandbox": false,
          "rate_limit": 100
        }
      }
    },
    "huggingface": {
      "rate_limit": 1000,
      "timeout": 60,
      "max_retries": 2,
      "retry_delay": 3,
      "models": {
        "sentiment": "cardiffnlp/twitter-roberta-base-sentiment-latest",
        "classification": "ProsusAI/finbert"
      }
    },
    "gemini": {
      "rate_limit": 60,
      "timeout": 45,
      "max_retries": 3,
      "retry_delay": 2,
      "model": "gemini-pro",
      "keys_count": 5
    },
    "claude": {
      "rate_limit": 20,
      "timeout": 60,
      "max_retries": 2,
      "retry_delay": 5,
      "model": "claude-3-haiku-20240307"
    },
    "newsapi": {
      "rate_limit": 100,
      "timeout": 30,
      "max_retries": 3,
      "retry_delay": 2,
      "endpoints": {
        "everything": "https://newsapi.org/v2/everything",
        "top_headlines": "https://newsapi.org/v2/top-headlines"
      }
    },
    "reddit": {
      "rate_limit": 60,
      "timeout": 25,
      "max_retries": 3,
      "retry_delay": 2,
      "subreddits": [
        "cryptocurrency",
        "CryptoCurrency",
        "ethereum",
        "defi",
        "UniSwap"
      ]
    },
    "telegram": {
      "rate_limit": 30,
      "timeout": 15,
      "max_retries": 5,
      "retry_delay": 1,
      "message_format": "markdown"
    }
  },
  
  "fallback_order": {
    "order_flow": [
      "oneinch",
      "thegraph", 
      "alchemy"
    ],
    "sentiment": [
      "huggingface",
      "gemini",
      "claude",
      "local_nlp"
    ],
    "news": [
      "newsapi",
      "reddit",
      "claude"
    ],
    "market_data": [
      "ccxt",
      "alchemy",
      "thegraph"
    ]
  },
  
  "trading": {
    "max_risk_per_trade": 0.02,
    "max_daily_loss": 0.05,
    "max_weekly_loss": 0.10,
    "max_monthly_loss": 0.20,
    "position_size_method": "kelly",
    "min_confidence_threshold": 0.65,
    "max_open_positions": 3,
    "max_daily_trades": 5,
    
    "propshot_settings": {
      "max_daily_loss": 0.025,
      "max_total_loss": 0.05,
      "max_lot_size": 0.5,
      "max_daily_trades": 3,
      "max_drawdown": 0.10,
      "min_profit_target": 0.015,
      "trailing_stop": true,
      "trailing_stop_distance": 20
    },
    
    "mt5_settings": {
      "magic_number": 123456,
      "slippage": 3,
      "deviation": 10,
      "fill_policy": "FOK"
    },
    
    "risk_levels": {
      "low": {
        "risk_percent": 0.01,
        "confidence_threshold": 0.75
      },
      "medium": {
        "risk_percent": 0.015,
        "confidence_threshold": 0.65
      },
      "high": {
        "risk_percent": 0.02,
        "confidence_threshold": 0.55
      }
    }
  },
  
  "analysis": {
    "order_flow": {
      "min_volume_threshold": 10000,
      "large_order_threshold": 50000,
      "time_window": 300,
      "significant_price_change": 0.02,
      "volume_spike_multiplier": 2.0
    },
    
    "sentiment": {
      "bullish_threshold": 0.6,
      "bearish_threshold": -0.6,
      "neutral_range": 0.2,
      "news_weight": 0.4,
      "social_weight": 0.6,
      "sentiment_history_days": 7
    },
    
    "technical": {
      "rsi_period": 14,
      "rsi_oversold": 30,
      "rsi_overbought": 70,
      "ma_periods": [20, 50, 200],
      "bollinger_period": 20,
      "bollinger_std": 2,
      "macd_fast": 12,
      "macd_slow": 26,
      "macd_signal": 9
    },
    
    "market_conditions": {
      "volatility_threshold": 0.05,
      "volume_threshold_multiplier": 1.5,
      "trend_confirmation_periods": 3,
      "support_resistance_lookback": 100
    }
  },
  
  "signals": {
    "types": {
      "market_order": {
        "execution_time": 5,
        "slippage_tolerance": 0.001
      },
      "limit_order": {
        "execution_time": 300,
        "price_adjustment": 0.0005
      }
    },
    
    "confirmation_requirements": {
      "min_indicators": 2,
      "order_flow_weight": 0.4,
      "sentiment_weight": 0.3,
      "technical_weight": 0.3
    },
    
    "stop_loss": {
      "method": "atr",
      "atr_multiplier": 2.0,
      "min_sl_pips": 10,
      "max_sl_pips": 100,
      "trailing_stop": true
    },
    
    "take_profit": {
      "method": "risk_reward",
      "risk_reward_ratio": 2.0,
      "partial_tp_levels": [0.5, 0.8],
      "min_tp_pips": 20,
      "max_tp_pips": 200
    }
  },
  
  "monitoring": {
    "active_hours": {
      "start": "07:00",
      "end": "19:30",
      "timezone": "Asia/Tashkent"
    },
    
    "inactive_hours": {
      "start": "19:30",
      "end": "07:00",
      "reduced_monitoring": true
    },
    
    "health_checks": {
      "api_status_interval": 300,
      "fallback_test_interval": 3600,
      "database_check_interval": 900,
      "memory_check_interval": 600
    },
    
    "alerts": {
      "api_failure_threshold": 3,
      "daily_loss_alert": 0.03,
      "position_time_alert": 3600,
      "unusual_activity_threshold": 0.1
    }
  },
  
  "database": {
    "type": "sqlite",
    "path": "data/bot.db",
    "backup_interval": 3600,
    "backup_retention_days": 30,
    "connection_pool_size": 10,
    "query_timeout": 30,
    
    "tables": {
      "signals": {
        "retention_days": 90
      },
      "trades": {
        "retention_days": 365
      },
      "api_logs": {
        "retention_days": 7
      },
      "market_data": {
        "retention_days": 30
      }
    }
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_rotation": {
      "max_size": "10MB",
      "backup_count": 5
    },
    
    "loggers": {
      "api_clients": {
        "level": "DEBUG",
        "file": "logs/api_clients.log"
      },
      "trading": {
        "level": "INFO",
        "file": "logs/trading.log"
      },
      "signals": {
        "level": "INFO",
        "file": "logs/signals.log"
      },
      "errors": {
        "level": "ERROR",
        "file": "logs/errors.log"
      }
    }
  },
  
  "telegram_messages": {
    "signal_format": {
      "include_chart": true,
      "include_analysis": true,
      "include_risk_info": true,
      "confirmation_timeout": 300
    },
    
    "templates": {
      "signal": "📊 SIGNAL KELDI\n════════════════\n📈 Savdo: {action} {symbol}\n💰 Narx: {price}\n📊 Lot: {lot_size} lot\n🛡️ Stop Loss: {stop_loss} ({sl_pips} pips)\n🎯 Take Profit: {take_profit} ({tp_pips} pips)\n⚡ Ishonch: {confidence}%\n🔥 Risk: {risk_percent}%\n════════════════\n📝 Sabab: {reason}\n⏰ Vaqt: {time} (UZB)\n💼 Akavunt: {account}",
      
      "error": "❌ XATOLIK\n════════════════\n🔴 Xato: {error}\n🕐 Vaqt: {time}\n🔧 Modul: {module}\n📝 Tafsilot: {details}",
      
      "status": "📊 BOT HOLATI\n════════════════\n🟢 Faol: {active}\n💰 Bugungi PnL: {daily_pnl}\n📈 Signallar: {signals_count}\n🔄 API Holati: {api_status}\n💾 Xotira: {memory_usage}%",
      
      "trade_result": "📊 SAVDO NATIJASI\n════════════════\n📈 Savdo: {action} {symbol}\n💰 Natija: {result}\n📊 Lot: {lot_size}\n💵 PnL: {pnl}\n⏰ Vaqt: {duration}\n🎯 Sabab: {reason}"
    }
  },
  
  "symbols": {
    "forex": [
      "EURUSD",
      "GBPUSD", 
      "USDJPY",
      "USDCHF",
      "AUDUSD",
      "USDCAD",
      "NZDUSD"
    ],
    
    "crypto": [
      "BTCUSD",
      "ETHUSD",
      "ADAUSD",
      "DOTUSD",
      "LINKUSD",
      "UNIUSD",
      "AAVEUSD"
    ],
    
    "indices": [
      "US30",
      "US500",
      "NAS100",
      "UK100",
      "GER30",
      "JPN225"
    ]
  },
  
  "strategy": {
    "update_frequency": "weekly",
    "backtest_period": 90,
    "optimization_period": 30,
    "minimum_trades_for_analysis": 50,
    
    "performance_metrics": {
      "min_win_rate": 0.55,
      "min_profit_factor": 1.3,
      "max_drawdown": 0.15,
      "min_sharpe_ratio": 1.0
    },
    
    "machine_learning": {
      "model_retrain_frequency": "daily",
      "feature_window": 100,
      "prediction_horizon": 24,
      "model_validation_split": 0.2
    }
  },
  
  "notifications": {
    "telegram": {
      "enabled": true,
      "signal_notifications": true,
      "error_notifications": true,
      "status_updates": true,
      "daily_summary": true
    },
    
    "email": {
      "enabled": false,
      "smtp_server": "",
      "smtp_port": 587,
      "daily_report": false,
      "error_alerts": false
    }
  }
}
